<form {{action "search" on="submit"}}>
  {{input value=model.name placeholder="Name"}}
  {{textarea value=model.description placeholder="Description" class="materialize-textarea"}}
  {{input value=model.tags placeholder="Tags"}}
  <div class="center">
    <a data-target="modal1" class="modal-trigger waves-effect waves-light btn">Add to Profile ></a>
  </div>
</form>
{{!-- <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Modal</a> --}}

<!-- Modal Structure -->
<div id="modal1" class="modal">
  <div class="modal-content">
    <div class="row">
      <div class="col s6">
        <h4>Select a Profile to Add this Place to:</h4>
          <div class="collection">
            {{#each profiles as |profile|}}
              <a href="#" {{action "relateProfile" profile.id}} class="collection-item">Profile: {{profile.id}}</a>
            {{/each}}
          </div>
      </div>
      <div class="col s6 valign-wrapper">
        <div class="valign">
          <h4>Create a New Profile</h4>
          <a {{action "savePlace" place}} href="#!" class="modal-action modal-close waves-effect waves-green btn">Create New Profile</a>
        </div>
      </div>
    </div>
  </div>
</div>
{{yield}}