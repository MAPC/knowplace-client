<div class="row">
  <div class="col s12 card">
    <div class="card-content">
      <span class="card-title grey-text text-darken-4">{{model.title}}</span>
      <p class="grey-text text-darken-2">{{model.description}}</p>
      <ul class="collection">
        <li class="collection-item">
          Data Points:
        </li>
        <li class="collection-item">
          <ul class="collection">
            {{#each model.dataPoints as |dataPoint|}}
              <li class="collection-item">{{dataPoint.name}}</li>
            {{/each}}
          </ul>
        </li>
      </ul>
      <ul class="collection">
        <li class="collection-item">
          Data Collections:
        </li>
        <li class="collection-item">
          <ul class="collection">
            {{#each model.dataCollections as |dataCollection|}}
              <li class="collection-item">{{dataCollection.title}}</li>
              <li class='collection-item'>
                <ul class="collection">
                {{#each dataCollection.dataPoints as |dataPoint|}}
                  <li class="collection-item">{{dataPoint.name}}</li>
                {{/each}}
                </ul>
              </li>
            {{/each}}
          </ul>
        </li>
      </ul>
    </div>
    <div class="card-action">
      <a {{action "saveReport" model}} href="#!" class="modal-action modal-close waves-effect waves-green btn">Add to Profile</a>
    </div>
  </div>
</div>
{{#unless session.isAuthenticated}}
  {{#message-modal-component as |someAction|}}
    {{user-authentication closeModal=someAction}}
  {{/message-modal-component}}
{{/unless}}