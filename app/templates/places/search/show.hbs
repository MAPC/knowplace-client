<div class="row">
  <div class="col s12 place-map">
    {{model.name}}
    {{map-view underlying=model.underlying geom=model.geometry}}
  </div>
  <div class="col s12">
    <button {{action "savePlace" this.model}} class="waves-effect waves-light btn">Add Map</button>
  </div>
</div>

{{#unless session.isAuthenticated}}
  {{#message-modal-component as |someAction|}}
    {{user-authentication closeModal=someAction}}
  {{/message-modal-component}}
{{/unless}}