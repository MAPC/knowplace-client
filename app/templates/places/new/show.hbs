<div class="row">
  <div class="col s12 m12 l8 place-map">
    {{map-create geom=model.geometry}}
  </div>
  <div class="col s12 m12 l4">
    <h4>Describe Your Map</h4>
    <form {{action "search" on="submit"}}>
      {{input value=name placeholder="Name"}}
      {{textarea value=description placeholder="Description" class="materialize-textarea"}}
      {{input value=tags placeholder="Tags"}}
      <div class="center">
        <button {{action "savePlace" this.model}} class="waves-effect waves-light btn">Create Map</button>
      </div>
    </form>
  </div>
</div>